{
	"compilerOptions": {
		"jsx": "preserve",
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "node",
		"declaration": true,
		"outDir": "./",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,

		"strict": true,

		"skipLibCheck": true,
		"typeRoots": ["./node_modules/@docucraft/srender"]
	},
	"include": ["src/", "node_modules/@docucraft/srender"],
	"exclude": ["node_modules/", "node_modules/@types/react"]
}
