{
	"compilerOptions": {
		"jsx": "react-jsx",
		"jsxImportSource": "@docucraft/srender",
		"declarationDir": "dist",

		"target": "ESNext",

		"module": "ESNext",
		"moduleResolution": "node",

		"declaration": true,
		"emitDeclarationOnly": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"baseUrl": ".",
		"paths": {
			"react": ["@docucraft/srender"]
		}
	},
	"include": ["./src"],
	"exclude": ["node_modules", "srender"]
}
